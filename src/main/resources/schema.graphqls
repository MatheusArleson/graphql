type Post {
	id: Long!
	content: String!
	author: Author!
}

type Author {
	id: Long!
	name: String!
}

type Query {
	allPosts: [Post]
	allAuthors: [Author]
}

type Mutation {
	createPost(content: String!, authorId: Long!): Post
	createAuthor(name: String!): Author
}

schema {
	query: Query
	mutation: Mutation
}